@using TextMessenger.DataLayer.DTOs.ChatDTOs;
@model List<ChatListElementDTO>
@{
    ViewData["Title"] = "_GroupChatListPartial";
}
<ul class="list-group list-group-flush group-chat-list">
    <li class="list-group-item" name="empty_chat">
        <div class="row">
            <div class="col-md-6">
                <span class="fw-bold" name="chatname"></span>
            </div>
            <div class="col-md-6 d-flex justify-content-end">
                <span class="fw-light" name="date"></span>
            </div>
        </div>
        <div class="row">
            <span class="col-md-12" name="message">
            </span>
        </div>
    </li>
    @foreach (var chat in Model)
    {
        <li class="list-group-item" name="@chat.ChatId">
            <div class="row">
                <div class="col-md-6">
                    <span class="fw-bold" name="chatname">@chat.ChatName</span>
                </div>
                <div class="col-md-6 d-flex justify-content-end">
                    <span class="fw-light" name="date">@chat.LastMessageDate</span>
                </div>
            </div>
            <div class="row">
                <span class="col-md-12" name="message">
                    @chat.LastMessageText
                </span>
            </div>
        </li>
    }
</ul>
